{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "noEmitOnError": true,
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": false,
    "declaration": true,
    "pretty": false,
    "removeComments": true,
    "types": ["node"]
  },
  "include": ["src/**/*.ts", "src/**/*.json", "src/_css-template.d.ts"],
  "exclude": ["**/*.test.ts", "**/*.spec.ts", "**/__test__"]
}
