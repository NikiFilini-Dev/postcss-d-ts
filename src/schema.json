{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://askirmas.github.io/postcss-plugin-d-ts/schema.json",
  "additionalProperties": false,
  "properties": {
    "crlf": {
      "$comment": "//TODO rename to EOL",
      "default": "\n",
      "type": "string"
    },
    "destination": {
      "title": "Used for debugging",
      "$comment": "//TODO `string` means to collect all to that file, `FALSY` - nearby each file",
      "oneOf": [
        {
          "description": "Declaration next to source file",
          "const": false
        },
        {
          "description": "Write to this object rather than filesystem",
          "const": {}
        }
      ],
      "default": false,
      "examples": [
        {}        
      ]
    }, 
    "template": {
      "title": "Path to template file",
      "type": "string",
      "format": "uri-reference",
      "default": false,
      "examples": [
        "./_css-template.d.ts"
      ]
    },
    "identifierParser": {
      "description": "https://www.w3.org/TR/CSS21/syndata.html#value-def-identifier",
      "default": "[#\\.]([\\w\\d-]+)",
      "type": "string",
      "format": "regex"
    }, 
    "identifierMatchIndex": {
      "type": "integer",
      "default": 1
    },
    "memberMatcher": {
      "title": "Permitted JS variables pattern or `null` to not emit",
      "default": "^[\\$\\w][\\$\\w\\d]+$",
      "type": ["string", "null"],
      "format": "regex",
      "examples": [
        null
      ]
    },
    "memberInvalid": {
      "title": "List to ignore - JS keywords and others",
      "default": [
        "break",
        "case",
        "catch",
        "class",
        "const",
        "continue",
        "debugger",
        "default",
        "delete",
        "do",
        "else",
        "export",
        "extends",
        "finally",
        "for",
        "function",
        "if",
        "import",
        "in",
        "instanceof",
        "new",
        "return",
        "super",
        "switch",
        "this",
        "throw",
        "try",
        "typeof",
        "var",
        "void",
        "while",
        "with",
        "yield",
        "Array",
        "Object",
        "JSON",
        "Function",
        "Map",
        "Set",
        "Symbol",
        "Proxy"
      ]
    }
  }
}